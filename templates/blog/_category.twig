{% extends "_layout" %}

{% set posts = craft.entries.section('blog').relatedTo(category).all() %}

{% block content %}

  <h1 class="text-4xl text-black font-display my-4 text-center">
    Latest {{ category.title }} | {{ category.categoryDescription }} 
  </h1>

  {% include "_includes/listing" with { posts: posts } only %}
{% endblock %}